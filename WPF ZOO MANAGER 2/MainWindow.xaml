<Window x:Class="WPF_ZOO_MANAGER_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ZOO_MANAGER_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Zoolist" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="87" FontSize="18"/>
        <ListBox Name="zooList" HorizontalAlignment="Left" Height="310" Margin="10,41,0,0" VerticalAlignment="Top" Width="160" SelectionChanged="zooList_SelectionChanged"/>
        <Label Content="Animals" HorizontalAlignment="Left" Margin="214,10,0,0" VerticalAlignment="Top" Width="87" FontSize="18"/>
        <ListBox x:Name="animalsList" HorizontalAlignment="Left" Height="310" Margin="214,41,0,0" VerticalAlignment="Top" Width="160"/>
        <Label Content="All Animals" HorizontalAlignment="Left" Margin="413,10,0,0" VerticalAlignment="Top" Width="101" FontSize="18"/>
        <ListBox x:Name="allAnimals" HorizontalAlignment="Left" Height="310" Margin="413,41,0,0" VerticalAlignment="Top" Width="160" SelectionChanged="allAnimals_SelectionChanged"/>

    </Grid>
</Window>
